@model IEnumerable<CJRSM.Models.DAL.Activite>

@{
    ViewBag.Title = "Index";
}

<main role="main">
    <nav name="nav_secondaire" class="nav nav_secondaire">
        <ul>
            <li>@Html.ActionLink("Nouvelle Activité", "Create")</li>
            <li><h2>@*@Html.ActionLink("", "")*@</h2></li>
        </ul>
    </nav>

    <div class="conteneur_Deux">
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MembreInscrit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NbrMembreMaximum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateDebut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateFin)
                </th>
                <th></th>
            </tr>

            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MembreInscrit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NbrMembreMaximum)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Jour)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateDebut)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateFin)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            }

        </table>
    </div>
</main>
