@model CJRSM.Models.DAL.Document

@{
    ViewBag.Title = "Modifier un document";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="conteneur_Unique">
        <h2>Modifier un document</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2">Titre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Titre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Auteur-e</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Auteur, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Auteur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sauvegarder les modifications" class="btn btn-default" />
            </div>
        </div>
        @Html.ActionLink("Retourner a la liste des documents", "Index")
    </div>
}